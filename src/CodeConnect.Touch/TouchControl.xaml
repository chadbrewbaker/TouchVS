<UserControl x:Class="CodeConnect.Touch.TouchControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CodeConnect.Touch"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Canvas x:Name="touchCanvas">
        <Path Stroke="Gold" StrokeThickness="3" Fill="Brown">
            <Path.Data>
                <PathGeometry>
                    <PathGeometry.Figures>
                        <PathFigure StartPoint="146,-106" IsClosed="true">
                            <ArcSegment Point="146,106" Size="180 180" IsLargeArc="False" SweepDirection="Clockwise"/>
                            <LineSegment Point="40.5,29.4" />
                            <ArcSegment Point="40.5,-29.4" Size="50 50" IsLargeArc="False" SweepDirection="Counterclockwise"/>
                        </PathFigure>
                    </PathGeometry.Figures>
                </PathGeometry>
            </Path.Data>
        </Path>
    </Canvas>
</UserControl>
